@model IEnumerable<InventoryTracking.Models.InventoryListTable>

@{
    ViewBag.Title = "Inventory";
}

<h2>Inventory List</h2>
<br />
<p class="col-md-6">
    @Html.ActionLink("Create New Item", "Create")
</p>
<div style="float:right;padding-bottom:10px">
    <a class="btn btn-primary btn-lg" onclick="window.open('@Url.Action("Export", "Home")', '_blank', '')">Download Inventory CSV File</a>

</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Item_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stock)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Item_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Stock)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
